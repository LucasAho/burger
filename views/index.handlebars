<div class = "container">

    <div class="row d-flex justify-content-center mt-4">  
               
        <img src="/assets/images/burger-img.jpg" width="25%" height="25%">
        
        <div class="col-12 text-center my-3">
            <h1 class="text-danger">Eat-Da-Burger</h1>
        </div> 
    </div>

    <div class="row mt-4">
        
        <div class="col-6">
            <ul>
                {{#each burgers}}

                
                    {{#unless devoured}}
                    <div class="col-6 bg-secondary float-left uneaten-Burger p-3">
                        {{burger_name}}         
                        
                    </div>

                    <div class="float-right">
                        <button class="btn btn-secondary" id="devourIt">Devour It</button>
                    </div>
                    {{/unless}}
                
                {{/each}}
            </ul>
        </div>

        <div class="col-3 justify-content-right">
            <ol>
                
                {{#each burgers}}
                
                    {{#if devoured}}
                        <li class="eaten-Burger p-3">
                            {{burger_name}}                            
                        </li>
                        
                    {{/if}}
                
                {{/each}}
</div>
            </ol>
        </div>

    </div>

     <!--User input block-->
    <div class="row d-flex justify-content-center">
        
        <form class="create-burger col-12 text-center mt-3">

            <input type="text" class="cssBurger text-center" id="newBurger" name="burger_name">
            <br>
            <button id="newBurger" class="btn btn-primary mt-2" type="submit">Submit</button>
            
        </form>

    </div>
  
    <p>Just enter a burger you want to eat and click the Submit button!</p>
</div>